<div>
<div class="container" style="margin-top:100px; padding-bottom:100px">
<p id="notice"><%= notice %></p>

<h1>Listing Affiliates</h1>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>Referral</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @affiliates.each do |affiliate| %>
      <tr>
        <td><%= affiliate.domain %></td>
        <td><%= affiliate.referral %></td>
        <td><%= affiliate.source %></td>
        <td><%= link_to 'Show', affiliate %></td>
        <td><%= link_to 'Edit', edit_affiliate_path(affiliate) %></td>
        <td><%= link_to 'Destroy', affiliate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Affiliate', new_affiliate_path %>
</div>
</div>
