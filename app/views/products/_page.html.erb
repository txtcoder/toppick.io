<% @products.each do |product| %>
<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 small_only">
  <div class="wow animated fadeInDown thumbnail">
    <div class="caption-img" style="background: url(<%= to_cdn(product.images) %>)no-repeat center center;"></div>

    <div class="caption-details">
      <ul>
        <li><h3><%= product.name %></h3></li>
        <li><p class="module line-clamp product_description"><%= product.description %></p></li>
        <li><p class="product_price">PRICE: $<%= product.price %></p></li>
      </ul>
      </div>

      <div class="view_details">
        <%= link_to 'VIEW DETAIL', product, action: "show", class: "price" %>
      </div>
      <% if logged_in? %>
        <%= link_to 'Copy', copy_product_path(product) %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

  </div>
</div>

<% end %>
<script>
    var mods =  document.getElementsByClassName("line-clamp");
    for (var i = 0; i < mods.length; i++)
    {
        $clamp(mods[i], {clamp: 3, useNativeClamp: false});

    }

</script>

