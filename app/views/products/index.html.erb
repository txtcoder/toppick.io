    <p id="notice"><%= notice %></p>
  
  <!-- begin:tagline -->  
  <div id="tagline">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2>WE WANT TO SHARE OUR TREASURES WITH YOU</h2>
        </div>
      </div>

      <div class="animated fadeInLeftBig product_nav">
        <ul class="list-inline">
          <li id="product_nav_col">
            <ul>
              <li><a href="#" onclick="get_hot();return false;"><div class="view_all <%= "active" if @sort=="hot" %>"></div></a></li>
